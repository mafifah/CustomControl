<?xml version="1.0" encoding="utf-8" ?>
<StackLayout xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Name="this"
             x:Class="Test.CustomControls.LoaderControl">
    <ActivityIndicator IsRunning="True" Color="{Binding Source={x:Reference this}, Path=LoaderColor}"/>
    <Label FontSize="20" Text="{Binding Source={x:Reference this}, Path=LoaderText}" HorizontalTextAlignment="Center" />
</StackLayout>
