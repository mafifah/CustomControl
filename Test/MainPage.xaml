<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:CustomControls="clr-namespace:Test.CustomControls"
             x:Class="Test.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <CustomControls:EntriControl Placeholder="Username"/>
            <CustomControls:EntriControl Placeholder="Password" BorderColor="Green"/>
            <Button
                x:Name="CounterBtn"
                Text="Login"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
